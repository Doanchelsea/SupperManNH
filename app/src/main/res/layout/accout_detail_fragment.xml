<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/re_hotpot_home_detail"
        android:background="@color/gray_200"
        android:padding="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40">

        <TextView
            android:id="@+id/tv_hotpot_home_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Lẩu nướng(0)"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/text_size_16" />
        <ImageView
            android:id="@+id/img_hotpot_home_detail"
            android:tint="@color/gray_700"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_expand_less_black_24dp"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/re_hotpot_home_detail"
        android:id="@+id/recycler_view_hotpot_home_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="@dimen/space_2"
        android:layout_below="@+id/recycler_view_hotpot_home_detail"
        android:id="@+id/re_dish_home_detail"
        android:background="@color/gray_200"
        android:padding="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40">
        <TextView
            android:id="@+id/tv_dirh_home_detail"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray_700"
            android:text="Món ăn(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_dish_home_detail"
            android:tint="@color/gray_700"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_expand_less_black_24dp"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/re_dish_home_detail"
        android:id="@+id/recycler_view_dish_home_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_marginTop="@dimen/space_2"
        android:layout_below="@+id/recycler_view_dish_home_detail"
        android:id="@+id/re_drinks_home_detail"
        android:background="@color/gray_200"
        android:padding="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40">
        <TextView
            android:id="@+id/tv_drinks_home_detail"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray_700"
            android:text="Nước uống(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_drinks_home_detail"
            android:tint="@color/gray_700"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_expand_less_black_24dp"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/re_drinks_home_detail"
        android:id="@+id/recycler_view_drinks_home_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
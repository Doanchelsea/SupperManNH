<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/space_6"
    android:layout_height="wrap_content">
    <View
        android:layout_marginBottom="@dimen/space_6"
        android:id="@+id/view_item_menu"
        android:background="@color/gray_200"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_below="@+id/view_item_menu"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_6"
        android:layout_marginRight="@dimen/space_10"
        android:id="@+id/imgAvatar"
        android:src="@color/blue"
        android:layout_width="@dimen/space_85"
        android:layout_height="@dimen/space_85" />
    <TextView
        android:layout_below="@+id/view_item_menu"
        android:id="@+id/tv_name_mon_an"
        android:text="Nguyễn Văn Đoàn"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18"
        android:layout_toRightOf="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/red"
        android:id="@+id/tv_price_mon_an"
        android:layout_marginTop="@dimen/space_10"
        android:layout_toRightOf="@+id/imgAvatar"
        android:layout_below="@+id/tv_name_mon_an"
        android:text="300.000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_14"
        android:id="@+id/tv_time_mon_an"
        android:layout_marginTop="@dimen/space_10"
        android:layout_toRightOf="@+id/imgAvatar"
        android:layout_below="@+id/tv_price_mon_an"
        android:text="300.000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@+id/view_item_menu"
        android:layout_alignParentRight="true"
        android:src="@drawable/sale"
        android:layout_width="@dimen/space_80"
        android:layout_height="@dimen/space_60" />

</RelativeLayout>